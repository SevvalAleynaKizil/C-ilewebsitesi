
<div class="container">
    <a href="/Admin/Kampanya/Insert" class="btn btn-primary" style="margin-bottom:15px">Yeni Kampanya Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Kampanya Adı</td>
                <td>Kampanya Detayı</td>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Campaignname</td>
                    <td>@item.Campaigndetail</td>
                    <td>
                        <a href="/admin/Kampanya/Update/@item.Id" class="btn btn-primary">Güncelle</a>
                        <a href="/admin/Kampanya/Delete/@item.Id" class="btn btn-success">Sil</a>

                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>