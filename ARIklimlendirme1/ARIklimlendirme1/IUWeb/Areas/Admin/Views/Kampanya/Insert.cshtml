@model DataAccsess.Models.Campaings

<div class="container">
    <form action="/Admin/Kampanya/Insert" method="post" enctype="multipart/form-data">
    <input type="text" class="form-control" style="margin-bottom:10px;" placeholder="Kampanya Adı" asp-for="Campaignname"/>
     <textarea type="text" class="form-control" style="margin-bottom:10px;height:150px" placeholder="Kampanya Detayı" asp-for="Campaigndetail"></textarea> 
    <button type="submit" class="form-control btn btn-primary">Ekleme Yap</button>
    </form>
</div>

@if(ViewBag.Message != null)
{
    <div class="alert alert-success" style="margin-top:15px">@ViewBag.Message</div>

}
@if(ViewBag.Error != null )
{
    <div class="alert alert-danger" style="margin-top:15px">@ViewBag.Error</div>
}