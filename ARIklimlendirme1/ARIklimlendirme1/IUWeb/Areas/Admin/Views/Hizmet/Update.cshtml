<div class="container">
    <a href="/Admin/Hizmet" class="btn btn-primary" style="margin-bottom:10px;">Geri</a>
    <form action="/Admin/Hizmet/Update/@Model.Id" enctype="multipart/form-data" method="post">
        <img src="/images/@Model.Images" width="200px" style="margin-bottom:10px;" />
        <input name="Images" value="@Model.Images" hidden />
        <input type="file" name="file" class="form-control" style="margin-bottom:10px;"/>
        <img src="/images/@Model.Icon" width="200px" style="margin-bottom:10px;" />
        <input name="Icon" value="@Model.Icon" hidden />
        <input type="file" name="icon" class="form-control" style="margin-bottom:10px;"/>
        <input type="text" class="form-control" name="Ministrationname" value="@Model.Ministrationname" style="margin-bottom:10px;"/>
        <input type="text" class="form-control" name="Ministrationdescription" value="@Model.Ministrationdescription" style="margin-bottom:10px;"/>
        <textarea name="Ministrationprovided" class="form-control" style="margin-bottom:10px;">@Model.Ministrationprovided</textarea>
        <button type="submit" class="form-control btn btn-primary">Güncelle</button>

    </form>

</div>
@if(ViewBag.Message != null)
{
    <div class="alert alert-success" style="margin-top:15px;">@ViewBag.Message</div>
}
@if(ViewBag.Error != null)
{
    <div class="alert alert-danger" style="margin-top:15px;">@ViewBag.Error</div>
}